<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Registro"
    android:id="@+id/layoutSignUp"
    >


    <TextView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:background="@color/azulfachero"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingBottom="10dp"
            android:text="@string/nombre"
            android:textColor="@color/negrofachero" />

        <EditText
            android:id="@+id/nombreText"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:autofillHints=""
            android:inputType="text"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/apellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingBottom="10dp"
            android:text="@string/apellido"
            android:textColor="@color/negrofachero" />

        <EditText
            android:id="@+id/apellidoText"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:autofillHints=""
            android:inputType="text"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/email"
            android:textColor="@color/negrofachero" />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textEmailAddress"
            tools:ignore="LabelFor,TextFields" />

        <TextView
            android:id="@+id/contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/contraseña"
            android:textColor="@color/negrofachero" />

        <EditText
            android:id="@+id/contraseñaText"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPassword"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/imagen_contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/img_contacto"
            android:textColor="@color/negrofachero" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/imgText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text=""
                android:textColor="@color/azulclarofachero" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/imgButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/azulfachero"
                android:text="@string/seleccionar"
                android:textAllCaps="false"
                android:textColor="@color/blancofachero" />

        </LinearLayout>

        <TextView
            android:id="@+id/identificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/identificacion"
            android:textColor="@color/negrofachero" />

        <EditText
            android:id="@+id/idText"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="number"
            tools:ignore="LabelFor,TextFields" />

        <TextView
            android:id="@+id/ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/ubicacion"
            android:textColor="@color/negrofachero" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ubiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text=""
                android:textColor="@color/azulclarofachero" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/ubiButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/azulfachero"
                android:text="@string/seleccionar"
                android:textAllCaps="false"
                android:textColor="@color/blancofachero" />

        </LinearLayout>

        <Button
            android:id="@+id/boton_registrarse"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/azulfachero"
            android:text="@string/registrarme"
            android:textAllCaps="false"
            android:textColor="@color/blancofachero"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="359dp" />


    </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>